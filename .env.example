# Application Settings
APP_NAME="Next Gen Loan Origination System"
APP_VERSION="1.0.0"
ENVIRONMENT="production"  # development, staging, production

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4

# Model Configuration
MODEL_PATH="models/xgboost_model.pkl"
SCALER_PATH="models/scaler.pkl"
SPACY_NER_PATH="models/spacy_ner"
SPACY_MODEL="en_core_web_sm"

# Prediction Thresholds
APPROVAL_THRESHOLD=0.50
HIGH_RISK_THRESHOLD=0.70

# IDP Configuration
TESSERACT_CMD="/usr/bin/tesseract"  # Path to Tesseract executable
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png"

# NLP Feature Engineering
TRANSACTION_LOOKBACK_MONTHS=6
MIN_TRANSACTIONS_REQUIRED=10

# Fairness Auditing
ENABLE_FAIRNESS_LOGGING=true
SENSITIVE_ATTRIBUTES="sex,age_group,race_proxy"
FAIRNESS_THRESHOLD=0.05

# Database Configuration (for audit logging)
DATABASE_URL="postgresql://loanuser:loanpass@postgres:5432/loan_audit"

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/application.log"

# Security
SECRET_KEY="your-secret-key-change-in-production"
API_KEY_HEADER="X-API-Key"

# SHAP Configuration
SHAP_SAMPLE_SIZE=100  # Number of samples for SHAP explainer background
SHAP_TOP_N_REASONS=3  # Number of adverse action reasons to generate

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds
